void SceneManager::Update()
{
	
	m_collis.updateCollision(m_Objects);
	UpdateDS();
	for (int i = 0; i < m_Objects.size() - 1; i++)
	{
		m_Objects.at(i)->Update(m_mousePosX, m_mousePosY);
	}
}
